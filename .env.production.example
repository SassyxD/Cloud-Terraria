# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# Next Auth
# Generate with: npx auth secret
AUTH_SECRET="your-production-auth-secret-here"

# Next Auth URL (your production domain)
NEXTAUTH_URL="https://your-domain.com"

# Next Auth Discord Provider
# Get these from: https://discord.com/developers/applications
# Redirect URI: https://your-domain.com/api/auth/callback/discord
AUTH_DISCORD_ID="your-production-discord-client-id"
AUTH_DISCORD_SECRET="your-production-discord-client-secret"

# AWS Cognito Provider (Optional)
AUTH_COGNITO_ID="your-cognito-client-id"
AUTH_COGNITO_SECRET="your-cognito-client-secret"
AUTH_COGNITO_ISSUER="https://cognito-idp.us-east-1.amazonaws.com/your-user-pool-id"

# Production Database (PostgreSQL on AWS RDS)
# Format: postgresql://username:password@host:port/database
# Example: postgresql://postgres:mypassword@terrakit-database.xyz.us-east-1.rds.amazonaws.com:5432/terrakit
DATABASE_URL="postgresql://username:password@your-rds-endpoint:5432/database_name"

# AWS Configuration (for Lambda function)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_LAMBDA_FUNCTION_NAME="your-lambda-function-name"

# Deployment Environment
NODE_ENV="production"