# Production Environment Variables
# Copy this to .env.production and fill in your actual values

# Next Auth
# Generate with: npx auth secret
AUTH_SECRET="your-production-auth-secret-here"

# Next Auth Discord Provider
AUTH_DISCORD_ID="your-production-discord-client-id"
AUTH_DISCORD_SECRET="your-production-discord-client-secret"

# Production Database (PostgreSQL on AWS RDS)
# Format: postgresql://username:password@host:port/database
# Example: postgresql://postgres:mypassword@terrakit-database.xyz.us-east-1.rds.amazonaws.com:5432/terrakit
DATABASE_URL="postgresql://username:password@your-rds-endpoint:5432/database_name"

# AWS Configuration (for Lambda function)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# Lambda Function Configuration
LAMBDA_FUNCTION_URL="https://your-lambda-function-url.lambda-url.us-east-1.on.aws/"

# Application Configuration
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="same-as-auth-secret-above"

# Server Limits
MAX_SERVERS_PER_USER="3"

# Deployment Environment
NODE_ENV="production"